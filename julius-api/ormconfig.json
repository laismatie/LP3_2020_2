{
   "type": "mongodb",
   "host": "mongo",
   "database": "julius-db",
   "synchronize": true,
   "logging": false,
   "useUnifiedTopology": true,
   "entities": [
      "src/entities/**/*.ts"
   ],
   "migrations": [
      "src/migrations/**/*.ts"
   ],
   "subscribers": [
      "src/subscribers/**/*.ts"
   ],
   "cli": {
      "entitiesDir": "src/entities",
      "migrationsDir": "src/migrations",
      "subscribersDir": "src/subscribers"
   }
}